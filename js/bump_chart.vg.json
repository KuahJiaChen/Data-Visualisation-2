{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/KuahJiaChen/Data-Visualisation-2/main/dataset/bump_chart.csv"
  },
  "transform": [
    {
      "sort": [{"field": "life_expectancy", "order": "descending"}],
      "window": [{"op": "rank", "as": "rank"}],
      "groupby": ["year"]
    }
  ],
  "layer": [
    {
      "params": [
        {"name": "hover", "select": {"type": "point", "on": "mouseover"}},
        {
          "name": "legend_selection",
          "select": {"type": "point", "fields": ["country"]},
          "bind": "legend"
        }
      ],
      "mark": {"type": "line", "orient": "vertical", "size": 3, "opacity": 0.5},
      "encoding": {
        "x": {"field": "year", "type": "ordinal", "axis": {"labelAngle": 360}},
        "y": {"field": "rank", "type": "ordinal"},
        "color": {
          "field": "country",
          "type": "nominal",
          "scale": {
            "domain": [
              "Bangladesh",
              "Brazil",
              "China",
              "Indonesia",
              "India",
              "Mexico",
              "Nigeria",
              "Pakistan",
              "Russia",
              "United States"
            ],
            "range": [
              "#D3D3D3",
              "#D3D3D3",
              "#E15759 ",
              "#D3D3D3",
              "#D3D3D3",
              "#D3D3D3",
              "#D3D3D3",
              "#D3D3D3",
              "#F28E2B",
              "#4E79A7"
            ]
          }
        },
        "strokeWidth": {
          "condition": [{"param": "hover", "empty": false, "value": 1}],
          "value": 0.3
        },
        "opacity": {"condition": {"param": "legend_selection", "value": 1}, "value": 0.2}
      }
    },
    {
      "encoding": {
        "x": {"field": "year", "type": "ordinal", "axis": {"labelAngle": 360}},
        "y": {"field": "rank", "type": "ordinal"}
      },
      "layer": [
        {
          "mark": {
            "type": "square",
            "orient": "vertical",
            "size": 280,
            "filled": true,
            "opacity": 0.9,
            "stroke": "#2E6E8D",
            "strokeOpacity": 1
          },
          "encoding": {
            "x": {
              "field": "year",
              "type": "ordinal",
              "axis": {"labelAngle": 360}
            },
            "y": {"field": "rank", "type": "ordinal"},
            "color": {
              "field": "country",
              "type": "nominal",
              "scale": {
                "domain": [
                  "Bangladesh",
                  "Brazil",
                  "China",
                  "Indonesia",
                  "India",
                  "Mexico",
                  "Nigeria",
                  "Pakistan",
                  "Russia",
                  "United States"
                ],
                "range": [
                  "#FF9DA7",
                  "#B07AA1",
                  "#E15759",
                  "#76B7B2",
                  "#BAB0A7",
                  "#EDC948",
                  "#B565A7",
                  "#9C755F",
                  "#F28E2B",
                  "#4E79A7"
                ]
              },
              "legend": {
                "title": "Country",
                "labelFontSize": 12,
                "symbolStrokeWidth": 10
              }
            },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country Name"},
              {"field": "year", "type": "quantitative", "title": "Year"},
              {
                "field": "life_expectancy",
                "type": "quantitative",
                "title": "Life Expectancy",
                "format": ".2f"
              },
              {
                "field": "rank",
                "type": "quantitative",
                "format": ",",
                "title": "Rank"
              }
            ],
            "strokeWidth": {
              "condition": [{"param": "hover", "empty": false, "value": 2}],
              "value": 0.9
            },
            "opacity": {
              "condition": {"param": "hover", "value": 1},
              "value": 0.7
            }
          }
        },
        {
          "transform": [{"filter": "datum.year == '1960'"}],
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": -25,
            "dy":-15,
            "fontWeight":"bold",
            "color": "#2E6E8D"
          },
          "encoding": {"text": {"field": "country", "type": "nominal"}}
        }
      ]
    },
    {
      "transform": [
        {"filter": "datum.country == 'China'"},
        {
          "calculate": "'Click on the legend; to filter the data'",
          "as": "text_annotation_raw"
        },
        {
          "calculate": "split(datum.text_annotation_raw,';')",
          "as": "text_annotation"
        }
      ],
      "mark": {"type": "text", "dx": 340, "dy": 5, "fontStyle": "bold"},
      "encoding": {
        "text": {"field": "text_annotation"},
        "color": {"value": "#2E6E8D"},
        "size": {"value": 10}
      }
    }
  ],
      "background": "#EDEFF0"
}