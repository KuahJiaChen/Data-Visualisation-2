{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bar chart with text labels. Set domain to make the frame cover the labels.",
  "width": 580,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/KuahJiaChen/Data-Visualisation-2/main/dataset/top_10_country_africa_internet_users.csv"
  },
  "transform": [
    {
      "calculate": "datum.internet_user/datum.population",
      "as": "percentage"
    },
    {
      "joinaggregate": [
        {
          "op": "mean",
          "field": "internet_user",
          "as": "AverageInternetUser"
        }
      ]
    }
  ],
  "encoding": {
    "y": {
      "field": "country",
      "type": "nominal"
    },
    "x": {
      "field": "population",
      "type": "quantitative",
      "scale": {
        "domain": [
          0,
          250000000
        ]
      }
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "highlight",
          "select": {
            "type": "point",
            "on": "mouseover"
          }
        },
        {
          "name": "select",
          "select": "point"
        }
      ],
      "mark": {
        "type": "bar",
        "size": 20,
        "color": "#FFE4E1",
        "stroke": "#800000",
        "cursor": "pointer"
      },
      "encoding": {
        "y": {
          "field": "country",
          "type": "nominal"
        },
        "x": {
          "field": "internet_user",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              250000000
            ]
          }
        },
        "fillOpacity": {
          "condition": {
            "param": "select",
            "value": 1
          },
          "value": 0.3
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "select",
              "empty": false,
              "value": 2
            },
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        }
      }
    },
    {
      "params": [
        {
          "name": "highlight2",
          "select": {
            "type": "point",
            "on": "mouseover"
          }
        },
        {
          "name": "select2",
          "select": "point"
        }
      ],
      "mark": {
        "type": "bar",
        "size": 8,
        "color": "#800000",
        "stroke": "#800000",
        "cursor": "pointer"
      },
      "encoding": {
        "y": {
          "field": "country",
          "type": "nominal"
        },
        "x": {
          "field": "population",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              250000000
            ]
          }
        },
        "fillOpacity": {
          "condition": {
            "param": "select",
            "value": 1
          },
          "value": 0.3
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "select2",
              "empty": false,
              "value": 2
            },
            {
              "param": "highlight2",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "population",
            "type": "quantitative",
            "title": "Population"
          },
          {
            "field": "internet_user",
            "type": "quantitative",
            "title": "Number of Internet User"
          },
          {
            "field": "percentage",
            "type": "quantitative",
            "title": "Percentage of Internet User",
            "format": ".0%"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3
      },
      "encoding": {
        "text": {
          "field": "percentage",
          "type": "quantitative",
          "format": ".0%"
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "grey",
        "size": 3.5,
        "strokeDash": [
          8,
          7
        ]
      },
      "encoding": {
        "x": {
          "aggregate": "average",
          "field": "AverageInternetUser",
          "type": "quantitative",
          "title": "Number of People"
        },
        "y": {
          "field": null
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.country == 'Morocco'"
        },
        {
          "calculate": "'Average Number of Internet User'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight": "bold",
        "dx": 110,
        "dy": -20
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color": {
          "value": "grey"
        },
        "size": {
          "value": 12
        }
      }
    }
  ],
  "background": "#EDEFF0"
}