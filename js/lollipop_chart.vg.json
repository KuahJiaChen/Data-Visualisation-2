{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple bar chart with embedded data.",
    "width": 500,
    "height": 350,
    "data": {
      "url": "https://raw.githubusercontent.com/KuahJiaChen/Data-Visualisation-2/main/dataset/lollipop_chart.csv"
    },
    "params": [
      
      {
        "name": "top_n",
        "value": 10,
        "bind": {
          "input": "range",
          "min": 5,
          "max": 15,
          "step": 1,
          "name": "Top n "
        }
      }
    ],
    "layer": [
      {
        "params": [{"name": "hover", "select": {"type": "point", "on": "mouseover"}}],
        "transform": [
          {"calculate": "toNumber(datum['Cost of Living Index'])", "as": "num_rank"},
          {
            
            "window": [{"op": "rank", "as": "rank"}],
            "sort": [{"field": "num_rank", "order": "descending"}]
          },
          {"filter": "datum.rank <= top_n"}
        ],
        "mark": {"type": "bar", "size": 7,"stroke":"#2E6E8D"},
        "encoding": {
          "x": {"field": "Cost of Living Index", "type": "quantitative"},
          "y": {
            "field": "Country",
            "type": "nominal",
            "axis": {"labelAngle": 0},
            "sort": {
              "field": "Cost of Living Index",
              "op": "average",
              "order": "descending"
            }
          },
          "color": {
            "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": [
              "Bermuda",
              "Switzerland",
              "Norway",
              "Iceland",
              "Japan",
              "Denmark",
              "Luxembourg",
              "Bahamas",
              "Israel",
              "Singapore",
              "Barbados",
              "Ireland",
              "France",
              "South Korea",
              "Australia"
            ],
            "range": [
              "#FF9DA7",
              "#B07AA1",
              "#E15759",
              "#76B7B2",
              "#BAB0A7",
              "#EDC948",
              "#B565A7",
              "#9C755F",
              "#F28E2B",
              "#4E79A7",
              "#663399",
              "#BC8F8F",
              "#6495ED",
              "#40E0D0",
              "#778899"
            ]
          }
          },
          "opacity": {"value": 0.8},
          "strokeWidth": {
            "condition": [{"param": "hover", "empty": false, "value": 2}],
            "value": 0.3
          },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": "Cost of Living Index", "type": "quantitative", "title": "Cost of Living Index"},
              {"field": "rank", "type": "quantitative", "title": "Rank"}
            ]
        }
        
      },
      {
        "transform": [
          {"calculate": "toNumber(datum['Cost of Living Index'])", "as": "num_rank"},
          {
            "window": [{"op": "rank", "as": "rank"}],
            "sort": [{"field": "num_rank", "order": "descending"}]
          },
          {"filter": "datum.rank <= top_n"}
        ],
        "mark": {
          "type": "point",
          "size": 550,
          "shape": "M0,.5L.6,.8L.5,.1L1,-.3L.3,-.4L0,-1L-.3,-.4L-1,-.3L-.5,.1L-.6,.8L0,.5Z",
          "filled": true
        },
        "encoding": {
          "x": {"field": "Cost of Living Index", "type": "quantitative"},
          "y": {
            "field": "Country",
            "type": "nominal",
            "axis": {"labelAngle": 0},
            "sort": {
              "field": "Cost of Living Index",
              "op": "average",
              "order": "descending"
            }
          },
          "color": {"value": "#2E6E8D"},
          "opacity": {"value": 1}
        }
      }
    ],"background":"#EDEFF0"
  }